<% form_for :board, 
	:url => board_path(@board), 
	:html => { :class => 'confirm_destroy', :method => :delete } do |f| %>
	<h2>Are you sure you want to destroy this board?</h2>
	<p><%= @board.title -%></p>
	<p>
		<%= f.submit "Destroy" %>
		or <%= link_to "Cancel", boards_path, :class => 'button' %>
	</p>
<% end %>

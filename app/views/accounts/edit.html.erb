<% form_tag user_account_path(current_user), :method => :put, :id => 'change_password' do %>

<br/>
<div><label for="old_password" class="block">Old Password</label><br />
<%= password_field_tag 'old_password', @old_password, :class => 'text' %></div>

<br/>
<div><label for="password" class="block">New Password</label><br />
<%= password_field_tag 'password', {}, :class => 'text' %><br />
<small>Between 4 and 40 characters</small></div>

<br/>
<div><label for="password_confirmation"  class="block">Confirm new password</label><br />
<%= password_field_tag 'password_confirmation', {}, :class => 'text' %></div>

<p>
<%= submit_tag 'Change password', :name => nil %>&nbsp;
<%= link_to 'Cancel', user_path(current_user), :class => 'button' %>
</p>

<% end %>

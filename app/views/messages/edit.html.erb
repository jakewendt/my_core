<h1>Editing message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @message %> |
<%= link_to 'Back', messages_path %>

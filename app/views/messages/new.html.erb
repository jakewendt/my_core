<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :recipient_id %><br />
    <%= f.collection_select(:recipient_id, User.all, :id, :login ) %>
  </div>
  <div>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <p>
    <%= f.submit 'Send' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>

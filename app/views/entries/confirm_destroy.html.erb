<% form_for :entry, 
	:url => entry_path(@entry), 
	:html => { :class => 'confirm_destroy', :method => :delete } do |f| %>
	<h2>Are you sure you want to destroy this entry?</h2>
	<p><%= @entry.title -%></p>
	<p>
		<%= f.submit "Destroy" %>
		or <%= link_to "Cancel", entry_path(@entry), :class => 'button' %>
	</p>
<% end %>

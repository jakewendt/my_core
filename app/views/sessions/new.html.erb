<% form_tag session_path, :id => 'new_session' do %>
  <p><label for="login">Login</label></p>
  <%= text_field_tag 'login', '', :class => 'text' %>

  <p><label for="password">Password</label></p>
  <%= password_field_tag 'password', '', :class => 'text' %>

  <p><label for="remember_me">Remember me:</label>
  <%= check_box_tag 'remember_me' %></p>

  <p>
    <%= submit_tag 'Log In', :name => nil %>
    <%= link_to 'Forgot Password?', forgot_password_path, :class => 'button' %>
  </p>

<% end %>

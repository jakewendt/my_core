<%= error_messages_for :user %>
<% form_for :user, :url => users_path, :html => { :id => 'new_user' } do |f| %>
  <p><label for="login">Login</label></p>
  <%= f.text_field :login, :class => 'text' %>

  <p><label for="email">Email</label></p>
  <%= f.text_field :email, :class => 'text' %>

  <p><label for="password">Password</label></p>
  <%= f.password_field :password, :class => 'text' %>

  <p><label for="password_confirmation">Confirm Password</label></p>
  <%= f.password_field :password_confirmation, :class => 'text' %>

<p><%= f.submit 'Sign Up' %></p>

<% end %>
